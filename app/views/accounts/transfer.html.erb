<%= render 'shared/header' %>
<%= form_with(local: true, class: 'flex flex-col w-full h-full') do |f| %>
  <div class="flex flex-col p-4 space-y-3">

    <fieldset class='flex flex-col'>
      <%= f.label :sender, class: 'font-semibold' %>
      <%= f.collection_select :sender_id, current_user.accounts.all, :id, :title, {default: current_user.accounts.first}, class: 'rounded border-gray-400 h-11 pl-3' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :receiver, class: 'font-semibold' %>
      <%= f.collection_select :receiver_id, current_user.accounts.all, :id, :title, {default: current_user.accounts.first}, class: 'rounded border-gray-400 h-11 pl-3' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :amount, class: 'font-semibold' %>
      <%= f.number_field :amount, class: 'rounded border-gray-400' %>
    </fieldset>
    <%= f.submit %>
  </div>
<% end %>