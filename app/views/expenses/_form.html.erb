<%= form_with(model: expense, local: true, class: 'flex flex-col w-full h-full') do |f| %>
  <% f.object.date = @expense.date || DateTime.now %>
  <%= render "shared/form_errors", form: f %>
  <div class="flex flex-col p-4 space-y-3">
    <fieldset class='flex flex-col'>
      <%= f.label :title, class: 'font-semibold' %>
      <%= f.text_field :title, class: 'rounded border-gray-400' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :account, class: 'font-semibold' %>
      <%= f.collection_select :account_id, current_user.accounts.all, :id, :title, {default: current_user.accounts.first}, class: 'rounded border-gray-400 h-11 pl-3' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :category, class: 'font-semibold' %>
      <%= f.collection_select :category_id, Category.all, :id, :title, {prompt: t(:choose)}, class: 'rounded border-gray-400 h-11 pl-3' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :amount, class: 'font-semibold' %>
      <%= f.number_field :amount, class: 'rounded border-gray-400' %>
    </fieldset>
    <fieldset class='flex flex-col'>
      <%= f.label :date, class: 'font-semibold' %>
      <%= f.datetime_field :date, class: 'rounded border-gray-400 w-full' %>
    </fieldset>
    <%= f.submit %>
  </div>
<% end %>