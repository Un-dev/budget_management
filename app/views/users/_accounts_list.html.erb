<div class="flex flex-col space-y-3 pt-7 xl:py-3 bg-gray-100 h-56 w-full pb-3 px-3">
  <div class='flex flex-row w-full justify-between'>
    <%= content_tag :h2, 'Vos comptes', class: 'font-semibold text-xl text-gray-600' %>
    <div class='flex h-7 w-20 p-2 text-xs bg-white items-center justify-center rounded-lg text-gray-500 border font-semibold border-gray-500'>
      <%= link_to '+ Compte', new_account_path(user: current_user)%>
    </div>
  </div>
  <div class='flex flex-col w-full h-full items-center justify-center'>
    <% if @accounts.empty? %>
      <%= render 'shared/add_account_none' %>
    <% else %>
      <div class='whitespace-nowrap overflow-x-scroll overflow-y-hidden w-full h-full'>
        <% @accounts.find_each do |account| %>
          <%= render 'shared/account_card', account: account %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>